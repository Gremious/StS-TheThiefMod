    <!-- This is how your code is packaged into the jar file-->
    <build>
        <!-- Change this to match your mods name -->
        <finalName>ThiefMod</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <!-- Change to match your mods name. This moves your mod into a common folder where all mods you make can go. -->
                                <!--<copy file="target/ThiefMod.jar" tofile="C:/My Stuff/Games/Steam/steamapps/common/SlayTheSpire/mods/ThiefMod.jar"/>-->
                                <copy file="target/${project.artifactId}.jar" tofile="${alt.build.dir}/${project.artifactId}.jar"/>
                                <!--<copy file="target/ThiefMod.jar" tofile="../mods/ThiefMod.jar"/>-->
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>ModTheSpire.json</exclude>
                    <exclude>**/*.xcf</exclude>
                    <exclude>**/*.ase</exclude>
                    <exclude>**/*.psd</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>ModTheSpire.json</include>
                </includes>
            </resource>
        </resources>

    </build>

